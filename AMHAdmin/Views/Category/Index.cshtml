        function addRequestVerificationToken(data) {
            data.__RequestVerificationToken = $('input[name=__RequestVerificationToken]').val();
            return data;
        }

        function InActiveMessage(Category_Id) {
            swal({
                title: "Are you sure ?",
                text: "You will be in-activating the category !",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willupdate) => {
                if (willupdate) {
                    UpdateStatus(Category_Id);
                }
            });
        }

        //ActiveMessage swal function
        function ActiveMessage(Category_Id) {
            swal({
                title: "Are you sure ?",
                text: "You will be activating the category !",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willupdate) => {
                if (willupdate) {
                    UpdateStatus(Category_Id);
                }
            });
        }

        //status ActiveInActive change function
        function UpdateStatus(Category_Id) {
            $.ajax({
                type: "POST",
                url: '@Url.Action(Actions.Category_ActInact, Controllers.Category)',
                data: { Category_Id: Category_Id },
                dataType: 'json',
                success: function (response) {
                    CategoriesDataTable.init();
                    if (response.Code == 200) {
                        swal({
                            title: "Success",
                            text: response.Message,
                            icon: "success",
                            timer: 2000
                        })
                    } else {
                        swal({
                            title: "Warning",
                            text: response.Message,
                            icon: "warning"
                        })
                    }
                },
                error: function (error) {
                    swal({
                        title: "Warning",
                        text: response.Message,
                        icon: "warning"
                    })
                }
            });
        }


        function AddCategoryPopUp() {
            $('#Category_Id').val(0);
            $('#Name').val('');
            $('#Description').val('');

            var $alertas = $('#addCategory');
            $alertas.validate().resetForm();
            $alertas.find('.error').removeClass('error');
            $('#defaultModalLabel').text('Add Category');
            $('#addCategory').modal('show');
        }

        function AddCategory() {

            //$(".saveBtn").hide();
            //$(".loading").show();
            //$(".closeBtn").hide();
            var userdata = {
                Category_Id: $("#Category_Id").val(),
                Name: $("#Name").val(),
                Description: $("#Description").val()
            }

            $.ajax({

                type: "POST",
                url: '@Url.Action(Actions.Category_Upsert, Controllers.Category)',
                data: userdata,
                dataType: 'json',
                success: function (response) {
                    if (response.Code == 200) {
                        $('#addCategory').modal('hide');
                        swal({
                            title: "Great !",
                            text: response.Message,
                            icon: "success",
                            timer: 2000
                        })
                        CategoriesDataTable.init();

                    }
                    else {
                        swal("Error !", response.Message , "error");
                    }
                    $(".saveBtn").show();
                    $(".loading").hide();
                    $(".closeBtn").show();
                    $('#addCategory').modal('hide');

                },
                error: function (error) {
                    swal("Error!", error.Message, "error");
                    $(".saveBtn").show();
                    $(".loading").hide();
                    $(".closeBtn").show();
                }
            });
        }


        //function emptyFormValues() {
        //    $("#Category_Id").val(0);
