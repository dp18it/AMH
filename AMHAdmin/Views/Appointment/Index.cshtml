        function AddAdmin() {

            //$(".saveBtn").hide();
            //$(".loading").show();
            //$(".closeBtn").hide();
            var userdata = {
                Id: $("#apoId").val(),
                ServiceName: $("#ServiceName").val(),
                Ammount: $("#Ammount").val(),
                Duration: $("#Duration").val(),
                AppointmentDate: $("#AppointmentDate").val(),
