        function addRequestVerificationToken(data) {
            data.__RequestVerificationToken = $('input[name=__RequestVerificationToken]').val();
            return data;
        }




        function StudentPopup() {
            emptyFormValues();
            var $alertas = $('#addAdmin');
            $alertas.validate().resetForm();
            $alertas.find('.error').removeClass('error');
            $('#addAdmin').modal('show');
        }
        
        function AddStudent() {
            var GenderId;
            if ($("#Male").is(":checked")) {
                GenderId= "Male";
            }
            else {
                GenderId= "Female";
            }
            //$(".saveBtn").hide();
            //$(".loading").show();
            //$(".closeBtn").hide();
            var userdata = {
                StudentId: $("#StudentId").val(),
                Name: $("#StudentName").val(),
                //Gender: $("input[name='Gender']:checked").val(),
                Gender: GenderId,
                Phone: $("#PhoneNumber").val(),
                DepartmentId: $("#DepartmentId").val(),

            }

            $.ajax({

                type: "POST",
                url: '@Url.Action(Actions.Student_Upsert, Controllers.Student)',
                data: userdata,
                dataType: 'json',
                success: function (response) {
                    if (response.Code == 200) {
                        $('#addAdmin').modal('hide');
                        swal({
                            title: "Great !",
                            text: response.Message,
                            icon: "success",
                            timer: 2000
                        })
                        StudentDataTable.init();

                    }
                    else {
                        swal("Error !", response.Message , "error");
                    }
                    $(".saveBtn").show();
                    $(".loading").hide();
                    $(".closeBtn").show();
                    $('#addAdmin').modal('hide');

                },
                error: function (error) {
                    swal("Error!", error.Message, "error");
                    $(".saveBtn").show();
                    $(".loading").hide();
                    $(".closeBtn").show();
                }
            });
        }


        function emptyFormValues() {
            $("#StudentId").val(0);
            $("#StudentName").val("");
           // $("#Male").val("");
            $("#Male").prop("checked", false);
            $("#Female").prop("checked", false);
            $("#PhoneNumber").val("");
            $("#DepartmentId").val(0);

        }

        function ViewStudent(id) {
            emptyFormValues();
            var $alertas = $('#addAdmin');
            $alertas.validate().resetForm();
            $alertas.find('.error').removeClass('error');

            if (id != null && id != "") {
                $.ajax({
                type: "POST",
                url: '@Url.Action(Actions.Student_ById, Controllers.Student)',
                data: { SMId: id },
                dataType: 'json',
                success: function (response) {
                    if (response.Code == 200) {
                        $("#StudentId").val(response.Item.StudentId);
                        $("#StudentName").val(response.Item.Name);
                        $("#PhoneNumber").val(response.Item.Phone);
                        $("#DepartmentId").val(response.Item.DepartmentId);
                        if (response.Item.Gender == 'Male') {
                            $("#Male").prop("checked", true);
                        }
                        else {
                            $("#Female").prop("checked", true);
                        }

                        var $alertas = $('#addAdmin');
                        $alertas.validate().resetForm();
                        $alertas.find('.error').removeClass('error');

                        $('#addAdmin').modal('show');
                    } else {
                        swal("Error !", response.Message, "error");
                    }
                },
                error: function (error) {
                    swal("Error !", "Something Went Wrong", "error");
                }
            });
            }
        }

         function DeleteStudent(Id) {
            swal({
                title: "Delete !",
                text: "Are You Sure You want to Delete this Data ?",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willdelete) => {
                if (willdelete) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action(Actions.Student_Delete, Controllers.Student)',
                        data: { StudentId: Id },
                        dataType: 'json',
                        success: function (response) {
                            swal("Success !", response.Message, "success");
                            StudentDataTable.init();
                        },
                        error: function (error) {
                            console.log('error', error);
                        }
                    })
                }
            });
        }
        function ActiveDoctorFillter() {

            $('#ActiveDoctorFilter').modal('show');

        }
        const SearchReset = (isReset = false) => {
            $(".saveBtn").hide();
            $(".loading").show();

            if (isReset == true) {

                $('#DepartmentIdFilter').val(0);
                
            }

            StudentDataTable.init();
            $('#ActiveDoctorFilter').modal('hide');
            setTimeout(() => {
                $(".saveBtn").show();
                $(".loading").hide();
                StudentDataTable.init();
            }, 1000);
        }
